{
    "manifest_version": 2,
    "name": "LinkedIn Jobs Quick Next",
    "version": "1.1",
    "description": "Adds a floating Next button to LinkedIn job search pages for quick navigation with persistent positioning",
    
    "permissions": [
      "activeTab",
      "storage",
      "*://linkedin.com/*",
      "*://*.linkedin.com/*"
    ],
    
    "content_scripts": [{
      "matches": ["*://linkedin.com/jobs/*", "*://*.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }],
    
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "LinkedIn Jobs Quick Next"
    },
    
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }